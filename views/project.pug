extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        //- Using interpolation to dynamically add the project name
        h1 #{project.name}

        //- Using interpolation to dynamically add the project description
        p.lead.text-light
          | #{project.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        //- Using `each` to display each technology in each project
        ul
          each technology in project.technologies
            li #{technology}

        //- Adding URLs 
        a.button.expanded(href=project.live_link target="_blank") Live Demo
        a.button.expanded(href=project.github_link target="_blank") GitHub Repo
    
    //- Adding images to each project
    each imgUrl in project.image_urls
     img.images(src=imgUrl)
     